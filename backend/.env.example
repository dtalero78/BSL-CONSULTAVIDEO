# Server Configuration
PORT=3000
NODE_ENV=development

# Twilio Credentials
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here

# Twilio API Key (required for Twilio Video)
TWILIO_API_KEY_SID=your_api_key_sid_here
TWILIO_API_KEY_SECRET=your_api_key_secret_here

# WhatsApp API (WHAPI) - Required for session reports
WHAPI_TOKEN=your_whapi_token_here

# JWT Secret for application authentication
JWT_SECRET=your_jwt_secret_here

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Database (opcional, para persistencia)
# DATABASE_URL=postgresql://user:password@localhost:5432/bsl_video
